<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.mostafa.maximummatching">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_theory"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_theory"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.LoadDocumentActivity"
            android:parentActivityName=".main.DocumentActivity"/>
        <activity
            android:name=".main.DocumentActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".main.OpenSourceActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".main.AboutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>